# 日志配置
logging:
  # 是否启用详细日志
  enabled: true

  # 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
  level: "INFO"

  # 控制台输出配置
  console:
    # 是否启用控制台输出
    enabled: true
    # 是否使用颜色
    use_colors: true
    # 控制台日志级别
    level: "INFO"

  # 文件输出配置
  file:
    # 是否启用文件输出
    enabled: true
    # 文件日志级别
    level: "DEBUG"
    # 单个日志文件最大大小
    max_size: "10MB"
    # 保留的日志文件数量
    backup_count: 5

# 需要复制的文件列表
copy_files:
  # 尺码表
  # - source: "static/detail1.jpg"
  #   description: "尺码表"

  # 购物指南
  # - source: "static/detail2.jpg"
  #   description: "购物指南"

  # 洗涤说明
  # - source: "static/detail3.jpg"
  #   description: "洗涤说明"

# 文件复制配置
copy_settings:
  # 是否覆盖已存在的文件
  overwrite: true

  # 是否显示详细复制信息
  verbose: true

  # 是否在复制失败时继续处理其他文件
  continue_on_error: true

# 添加图层信息 记录图层顺序
picture_layers:
  # 第一个图层 - 货品图片
  layer_1:
    source: "${product_image}"
    description: "商品主图"
    width: 1000
    height: 1000
    x: 900
    y: 1800

  # 第二个图层 - bg
  layer_2:
    source: "static/key.png"
    description: "证书"
    width: 2480
    height: 3508
    x: 0
    y: 0

  # 第三个图层 - 文件名文字
  layer_3:
    type: "text"
    text: "${file_name}"
    description: "文件名"
    font_size: 45
    font_color: [0, 0, 0, 255]  # 黑色 RGBA
    x: 1000
    y: 1150
  # 第三个图层 - 文件名文字
  layer_4:
    type: "text"
    text: "Y${price_text}"
    description: "价格"
    font_size: 45
    font_color: [0, 0, 0, 255]  # 黑色 RGBA
    x: 1300
    y: 1150
# 输出图片质量 (1-100, 仅对JPEG有效)
quality: 85

# 画布尺寸 (宽度, 高度)
canvas_size: [1000, 1000]

# 背景颜色 RGBA
background_color: [255, 255, 255, 255] # 白色背景
